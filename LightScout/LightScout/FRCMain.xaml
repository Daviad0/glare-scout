        <StackLayout x:Name="submittingFormToBluetooth" Opacity="1" BackgroundColor="#2a7afa" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" IsVisible="False">
            <Grid VerticalOptions="FillAndExpand" Margin="0,50,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="220"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Saving to Database" x:Name="savingMessage" TextColor="White" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Opacity="1" Grid.Row="0" Grid.Column="0" FontSize="30" FontAttributes="Bold">
                </Label>
                <Label Text="Do not turn off the device!" TextColor="White" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Opacity="1" Grid.Row="1" Grid.Column="0" FontSize="20" FontAttributes="Italic">
                </Label>

                <Label Text="&#xef49;" TextColor="White" FontFamily="{StaticResource IconFont}" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Opacity="1" Grid.Row="2" Grid.Column="0" FontSize="140">
