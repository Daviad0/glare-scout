                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="&#xef6b;" FontFamily="{StaticResource IconFont}" TextColor="#2a7afa" FontSize="70" Grid.Column="0"/>
